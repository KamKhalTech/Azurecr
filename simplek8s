kind:  ReplicationController
apiVersion: v1   
metadata:  
  name: apprc      
  labels:
    app: myapp 
spec:
  selector: 
    app: fe  
  replicas: 2    
  template:  #podTemplate 
    metadata: 
      name: apppod  
      labels:
        app: fe 
    spec:  
      containers:
      - name: robots 
        image: azure-nginix   
        ports: 
        - containerPort: 8080
